{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": [
    {
      "type": "sentence-case"
    },
    "cargo-workspace"
  ],
  "include-component-in-tag": true,
  "tag-separator": "/",
  "packages": {
    "cli": {
      "release-type": "rust",
      "component": "cli"
    },
    "lib": {
      "release-type": "rust",
      "component": "lib",
      "release-as": "2.1.0"
    },
    "node": {
      "release-type": "node",
      "component": "node"
    },
    "python": {
      "release-as": "1.0.0",
      "release-type": "rust",
      "component": "python"
    }
  }
}